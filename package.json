{
  "name": "vue-tinder",
  "version": "1.1.1",
  "description": "Imitate Tinder by Vue.js",
  "main": "lib/vue-tinder.js",
  "author": {
    "name": "JohnnyDan",
    "email": "shanlh841271734@live.com"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib src/components/vue-tinder/Tinder.vue",
    "lint": "vue-cli-service lint",
    "release": "bash ./release.sh"
  },
  "keywords": [
    "tinder",
    "tantan",
    "vue"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shanlh/vue-tinder.git"
  },
  "homepage": "https://github.com/shanlh/vue-tinder",
  "license": "MIT",
  "dependencies": {
    "core-js": "^2.6.5",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/strongly-recommended",
      "@vue/prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": 1
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}

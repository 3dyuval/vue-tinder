{
  "name": "vue-tinder",
  "version": "3.0.0",
  "description": "Imitate Tinder by Vue.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "keywords": [
    "tinder",
    "vue"
  ],
  "homepage": "https://github.com/shanlh/vue-tinder",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "nanoid": "^5.0.7",
    "vite": "^5.4.10",
    "vue": "^3.5.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/strongly-recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": 1
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
